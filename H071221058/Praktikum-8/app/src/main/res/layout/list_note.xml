<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:id="@+id/card"
    android:layout_marginVertical="10dp"
    app:cardBackgroundColor="@color/slate_gray"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <!-- Root layout sebagai RelativeLayout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp">

        <!-- LinearLayout horizontal untuk Title dan Button delete -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll"
            android:gravity="center_vertical">

            <!-- TextView untuk judul -->
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Title"
                android:textColor="@android:color/black"
                android:fontFamily="@font/latobold"
                android:textSize="22sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- TextView untuk waktu -->
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll"
            android:textColor="@color/white_smoke"
            android:text="Created_At"
            android:textSize="16sp"
            android:textStyle="italic" />

        <!-- View separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/time"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"/>

        <!-- TextView untuk deskripsi -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:text="Description"
            android:textStyle="normal"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginTop="10dp"
            android:background="@color/slate_gray"
            android:contentDescription="@string/todo"
            android:src="@drawable/edit"
            android:layout_marginBottom="5dp"
            android:textSize="20sp">
        </ImageButton>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
